{
  "name": "note-pages",
  "version": "1.0.0",
  "description": "An app for taking notes",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"nodemon server.js\" \"npm start --prefix client\"",
    "start-no-dev-server": "concurrently \"cross-env NODE_ENV=production nodemon server.js\" \"npm run build\"",
    "client": "npm start --prefix client",
    "server": "nodemon server.js",
    "build": "npm run build --prefix client",
    "build-dev": "npm run build-dev --prefix client"
  },
  "author": "Borislav Branimirov",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.9",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "query-string": "^6.12.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2"
  }
}
